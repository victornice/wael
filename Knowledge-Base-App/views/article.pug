extends layout

block content
    h1= article.title
    h5 Written By #{author}
    hr
    p.article-body= article.body
    if user
        if user.id == article.author
            a(class="btn waves-effect blue-grey" href=`/article/edit/${article._id}?title=${article.title}&author=${author}`) Edit
            a(class="btn waves-effect red delete" href="#" data-id=article._id) Delete
